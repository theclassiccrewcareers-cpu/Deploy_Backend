# ClassBridge Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration (REQUIRED)
# For Render PostgreSQL, get this from your database dashboard
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@host:5432/classbridge_db

# AI Configuration (REQUIRED)
# Get your API key from https://console.groq.com
GROQ_API_KEY=gsk_your_groq_api_key_here

# Optional: Separate API keys for specific AI features
# If not set, will use GROQ_API_KEY
LESSON_PLANNER_API_KEY=
GRADE_HELPER_API_KEY=

# Google OAuth (OPTIONAL)
# Get from https://console.cloud.google.com
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# Email Configuration (OPTIONAL)
# For Gmail, use an App Password (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Development Settings
# Uncomment for local development with SQLite instead of PostgreSQL
# DATABASE_URL=class_bridge.db
